@model HandyHelper.ViewModels.AddMessageViewModel
<h2>Messenger</h2>
<form  asp-controller="Home" asp-action="Message" method="post">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control"/>

    </div>
    <div class="form-group">
        <label asp-for="Messages">Message</label>
        <textarea asp-for="Messages" class="form-control">Message Me</textarea>

    </div>
    <div class="form-group">
        <input type="submit"  value="Message Me" class="btn btn-success"/>

    </div>
</form>


